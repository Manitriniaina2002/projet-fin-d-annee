antonio@antonio:~/project-root/iot-security$ cat docker-compose.iot.yml
version: "3.9"

services:
  mosquitto:
    image: eclipse-mosquitto:2
    container_name: mosquitto_secure
    restart: unless-stopped
    ports:
      - "8883:8883"
    volumes:
      - ./mosquitto/config:/mosquitto/config
      - ./mosquitto/data:/mosquitto/data
      - ./mosquitto/log:/mosquitto/log
      - ./mosquitto/certs:/mosquitto/certs

  nodered:
    image: nodered/node-red
    container_name: nodered_secure
    restart: unless-stopped
    ports:
      - "1880:1880"
    volumes:
      - ./nodered:/data
      - /var/log/suricata:/suricata-logs:ro

  influxdb:
    image: influxdb:2
    container_name: influxdb
    restart: unless-stopped
    ports:
      - "8086:8086"
    volumes:
      - ./influxdb/data:/var/lib/influxdb2
      - ./influxdb/config:/etc/influxdb2

  grafana:
    image: grafana/grafana:latest
    container_name: grafana
    restart: unless-stopped
    ports:
      - "3000:3000"
    volumes:
      - ./grafana/data:/var/lib/grafana
      - ./grafana/provisioning:/etc/grafana/provisioning





antonio@antonio:~/project-root/web-application$ cat docker-compose.override.yml
# Override file for development environment
# This file is automatically merged with docker-compose.yml when running docker-compose

services:
  backend:
    environment:
      - DATABASE_URL=postgresql://siac:password@postgres:5432/siac_db
      - MQTT_BROKER=mosquitto
      - MQTT_PORT=1883
      - INFLUXDB_URL=http://influxdb:8086
      - PYTHONUNBUFFERED=1
      - CORS_ORIGINS=http://localhost:5173,http://127.0.0.1:5173,http://frontend:80,http://localhost:3000
    volumes:
      - ./backend:/app
      - /app/venv # Don't mount virtual environment
    command:
      [
        "uvicorn",
        "app.main:app",
        "--host",
        "0.0.0.0",
        "--port",
        "8000",
        "--reload",
      ]
    healthcheck:
      test:
        [
          "CMD",
          "python",
          "-c",
          "import requests; requests.get('http://localhost:8000/api/v1/health')",
        ]
      interval: 10s
      timeout: 5s
      retries: 3

  frontend:
    image: node:20-alpine
    working_dir: /app
    volumes:
      - ./frontend:/app
      - /app/node_modules # Don't mount node_modules
    command: ["sh", "-c", "npm install && npm run dev -- --host 0.0.0.0"]
    ports:
      - "3000:3000"
    environment:
      - VITE_API_URL=http://localhost:18000

  grafana:
    ports:
      - "3100:3000"



antonio@antonio:~/project-root/web-application$ cat docker-compose.prod.yml
# Production override file
# Use with: docker-compose -f docker-compose.yml -f docker-compose.prod.yml up

services:
  postgres:
    environment:
      - POSTGRES_DB=${POSTGRES_DB:-siac_db}
      - POSTGRES_USER=${POSTGRES_USER:-siac}
      - POSTGRES_PASSWORD=${POSTGRES_PASSWORD:-password}
    deploy:
      resources:
        limits:
          memory: 512M
        reservations:
          memory: 256M

  backend:
    environment:
      - DATABASE_URL=postgresql://${POSTGRES_USER:-siac}:${POSTGRES_PASSWORD:-password}@postgres:5432/${POSTGRES_DB:-siac_db}
      - MQTT_BROKER=mosquitto
      - MQTT_PORT=1883
      - INFLUXDB_URL=http://influxdb:8086
      - PYTHONUNBUFFERED=1
      - CORS_ORIGINS=${CORS_ORIGINS:-http://localhost,https://yourdomain.com}
      - SECRET_KEY=${SECRET_KEY:-your-secret-key-here}
    deploy:
      resources:
        limits:
          memory: 1G
        reservations:
          memory: 512M
      restart_policy:
        condition: on-failure
        delay: 5s
        max_attempts: 3
        window: 120s

  influxdb:
    environment:
      - DOCKER_INFLUXDB_INIT_USERNAME=${INFLUXDB_USERNAME:-admin}
      - DOCKER_INFLUXDB_INIT_PASSWORD=${INFLUXDB_PASSWORD:-password}
      - DOCKER_INFLUXDB_INIT_ORG=${INFLUXDB_ORG:-siac}
      - DOCKER_INFLUXDB_INIT_BUCKET=${INFLUXDB_BUCKET:-siac_metrics}
      - DOCKER_INFLUXDB_INIT_ADMIN_TOKEN=${INFLUXDB_TOKEN:-siac-token}
    deploy:
      resources:
        limits:
          memory: 1G
        reservations:
          memory: 512M

  grafana:
    environment:
      - GF_SECURITY_ADMIN_USER=${GRAFANA_USER:-admin}
      - GF_SECURITY_ADMIN_PASSWORD=${GRAFANA_PASSWORD:-password}
      - GF_USERS_ALLOW_SIGN_UP=${GRAFANA_ALLOW_SIGNUP:-false}
    ports:
      - "3100:3000"
    deploy:
      resources:
        limits:
          memory: 512M
        reservations:
          memory: 256M

  frontend:
    ports:
      - "3000:3000"
    deploy:
      resources:
        limits:
          memory: 256M
        reservations:
          memory: 128M



antonio@antonio:~/project-root/web-application$ cat docker-compose.yml
services:
  postgres:
    image: postgres:15
    container_name: siac-postgres
    environment:
      - POSTGRES_DB=siac_db
      - POSTGRES_USER=siac
      - POSTGRES_PASSWORD=password
    volumes:
      - postgres_data:/var/lib/postgresql/data
      - ./infra/postgres/init.sql:/docker-entrypoint-initdb.d/init.sql
    ports:
      - "25432:5432"
    networks:
      - siac-network
    healthcheck:
      test: ["CMD-SHELL", "pg_isready -U siac -d siac_db"]
      interval: 30s
      timeout: 10s
      retries: 3
    restart: unless-stopped

  backend:
    build: ./backend
    container_name: siac-backend
    ports:
      - "18000:8000"
    environment:
      - MQTT_BROKER=mosquitto
      - MQTT_PORT=1883
      - INFLUXDB_URL=http://influxdb:8086
      - INFLUXDB_TOKEN=siac-token
      - INFLUXDB_ORG=siac
      - INFLUXDB_BUCKET=bucket_iot
      - PYTHONUNBUFFERED=1
      - CORS_ORIGINS=http://localhost:5173,http://127.0.0.1:5173,http://frontend:80
    depends_on:
      mosquitto:
        condition: service_started
      influxdb:
        condition: service_healthy
    networks:
      - siac-network
    volumes:
      - ./backend/model_isolation_forest.pkl:/app/model_isolation_forest.pkl
    healthcheck:
      test:
        [
          "CMD",
          "python",
          "-c",
          "import requests; requests.get('http://localhost:8000/api/v1/health')",
        ]
      interval: 30s
      timeout: 10s
      retries: 3
    restart: unless-stopped

  mosquitto:
    image: eclipse-mosquitto:2.0
    container_name: siac-mosquitto
    ports:
      - "1885:1883"
    volumes:
      - ./infra/mosquitto/config:/mosquitto/config:ro
      - mosquitto_data:/mosquitto/data
    networks:
      - siac-network
    restart: unless-stopped

  influxdb:
    image: influxdb:2.7
    container_name: siac-influxdb
    ports:
      - "18086:8086"
    environment:
      - DOCKER_INFLUXDB_INIT_MODE=setup
      - DOCKER_INFLUXDB_INIT_USERNAME=admin
      - DOCKER_INFLUXDB_INIT_PASSWORD=password
      - DOCKER_INFLUXDB_INIT_ORG=siac
      - DOCKER_INFLUXDB_INIT_BUCKET=bucket_iot
      - DOCKER_INFLUXDB_INIT_ADMIN_TOKEN=siac-token
    volumes:
      - influxdb_data:/var/lib/influxdb
    networks:
      - siac-network
    healthcheck:
      test: ["CMD", "curl", "-f", "http://localhost:8086/health"]
      interval: 30s
      timeout: 10s
      retries: 3
    restart: unless-stopped

  grafana:
    image: grafana/grafana:10.2.0
    container_name: siac-grafana
    ports:
      - "3100:3000"
    environment:
      - GF_SECURITY_ADMIN_USER=admin
      - GF_SECURITY_ADMIN_PASSWORD=password
      - GF_USERS_ALLOW_SIGN_UP=false
    volumes:
      - grafana_data:/var/lib/grafana
      - ./infra/grafana/provisioning:/etc/grafana/provisioning
    networks:
      - siac-network
    depends_on:
      - influxdb
    restart: unless-stopped

  nodered:
    image: nodered/node-red:latest
    container_name: siac-nodered
    ports:
      - "18800:1880"
    environment:
      - TZ=Europe/Paris
    volumes:
      - nodered_data:/data
    networks:
      - siac-network
    depends_on:
      - mosquitto
      - influxdb
    restart: unless-stopped

  suricata:
    image: jasonish/suricata:latest
    container_name: siac-suricata
    network_mode: host # Pour analyser le trafic réseau hôte
    volumes:
      - ./infra/suricata/rules:/etc/suricata/rules:ro
      - ./infra/suricata/logs:/var/log/suricata
      - /var/run/docker.sock:/var/run/docker.sock:ro # Optionnel pour monitoring
    environment:
      - SURICATA_OPTIONS=-i eth0 --af-packet # Adapter selon l'interface réseau
    cap_add:
      - NET_RAW
      - NET_ADMIN
    restart: unless-stopped

networks:
  siac-network:
    driver: bridge

volumes:
  postgres_data:
  influxdb_data:
  grafana_data:
  mosquitto_data:
  nodered_data:






version: "3.9"

networks:
  siac-network:
    external: true   # IMPORTANT : utilise le réseau créé par iot-security

services:
  # -------------------------------------
  #        BACKEND (FASTAPI + ML)
  # -------------------------------------
  backend:
    build: ./backend
    container_name: siac-backend
    ports:
      - "18000:8000"
    environment:
      # --- Connexion aux services IoT déjà existants ---
      - DATABASE_URL=postgresql://siac:password@postgres:5432/siac_db
      - MQTT_BROKER=mosquitto_secure
      - MQTT_PORT=1883
      - INFLUXDB_URL=http://influxdb:8086
      - INFLUXDB_TOKEN=siac-token
      - INFLUXDB_ORG=siac
      - INFLUXDB_BUCKET=bucket_iot

      # --- Backend ---
      - PYTHONUNBUFFERED=1
      - CORS_ORIGINS=http://frontend:80,http://localhost:3000,http://localhost:5173
    volumes:
      - ./backend:/app
    depends_on:
      - influxdb_iot
      - mosquitto_iot
    networks:
      - siac-network
    restart: unless-stopped

  # Proxy pour dépendances (permet depends_on)
  mosquitto_iot:
    container_name: mosquitto_iot
    image: alpine:3.19
    command: ["sleep", "infinity"]
    networks:
      - siac-network

  influxdb_iot:
    container_name: influxdb_iot
    image: alpine:3.19
    command: ["sleep", "infinity"]
    networks:
      - siac-network

  # -------------------------------------
  #           FRONTEND (React)
  # -------------------------------------
  frontend:
    image: node:20-alpine
    container_name: siac-frontend
    working_dir: /app
    command: ["sh", "-c", "npm install && npm run dev -- --host 0.0.0.0"]
    ports:
      - "5173:5173"
    volumes:
      - ./frontend:/app
    environment:
      - VITE_API_URL=http://backend:8000
    depends_on:
      - backend
    networks:
      - siac-network








